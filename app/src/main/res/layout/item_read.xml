<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_read_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_size_12"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_read_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_read_type"
            android:layout_marginEnd="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:text="我和你来相见，带着这世界唯一一朵花朵"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24"
            />

        <TextView
            android:id="@+id/tv_read_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_read_title"
            android:layout_below="@id/tv_read_title"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="文/肉山大魔王"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:id="@+id/img_read_picture"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/gray"
            android:layout_below="@id/tv_read_author"
            android:layout_marginEnd="@dimen/dimen_12"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_12"
            />

        <TextView
            android:id="@+id/tv_read_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_read_picture"
            android:layout_marginEnd="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="为什么你的关心总讨人厌?"
            android:textSize="@dimen/text_size_14"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_content"
        android:layout_marginBottom="@dimen/dimen_12"
        android:layout_marginEnd="@dimen/dimen_12"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_12"
        >

        <TextView
            android:id="@+id/tv_read_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="3天前"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_12"
            />

        <ImageView
            android:id="@+id/img_read_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_share"
            />

        <ImageView
            android:id="@+id/img_read_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_12"
            android:layout_toStartOf="@+id/img_read_share"
            android:src="@drawable/img_heart"/>

        <TextView
            android:id="@+id/tv_read_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_6"
            android:layout_toStartOf="@id/img_read_heart"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_10"/>

    </RelativeLayout>


</RelativeLayout>